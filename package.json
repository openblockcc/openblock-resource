{
  "name": "openblock-resource",
  "version": "0.1.0",
  "description": "External resources for OpenBlock projects",
  "main": "start.js",
  "scripts": {
    "postinstall": "npm run fetch",
    "start": "rimraf ../.openblockData/external-resources && node ./test/start.js",
    "fetch": "node ./script/download.js",
    "clean": "rimraf external-resources dist downloading-* ../.openblockData/external-resources",
    "build:extension": "node ./script/generate-extension-page.js --url=https://openblockcc.github.io/openblock-extension/",
    "build:device": "node ./script/generate-device-page.js --url=https://openblockcc.github.io/openblock-device/",
    "build": "rimraf dist && npm run build:extension && npm run build:device",
    "deploy": "npm run fetch && npm run build",
    "lint": "eslint ./",
    "test": "node test/upgrade.js",
    "test2": "node test/test.js"
  },
  "author": "ArthurZheng",
  "license": "MIT",
  "dependencies": {
    "@fohlen/github-release-downloader": "^1.0.0",
    "compare-versions": "^3.6.0",
    "copy-dir": "^1.3.0",
    "express": "^4.17.1",
    "format-message": "^6.2.3",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "nodegit": "^0.27.0",
    "openblock-github-dl": "^0.5.1",
    "os-locale": "^5.0.0",
    "require-all": "^3.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.3.0",
    "eslint-config-scratch": "^5.0.0",
    "json": "^10.0.0"
  }
}
